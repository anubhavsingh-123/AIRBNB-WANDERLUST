<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="alert alert-danger col-6 offset-3 alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Error <%= err.statusCode || 500 %></h4>
        <p><%= err.message %></p>
        
        <% if (err.stack) { %>
            <hr>
            <pre><%= err.stack %></pre> <!-- Shows stack trace in development -->
        <% } %>

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>

<div class="text-center mt-3">
    <a href="/" class="btn btn-primary" style="margin-bottom: 200px;">Back to Home</a>
</div>
